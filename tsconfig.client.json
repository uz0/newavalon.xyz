{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "composite": true,
    "outDir": "./dist-client",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"],
      "@content/*": ["./client/content/*"],
      "@shared/*": ["./server/types/*"]
    }
  },
  "include": [
    "client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "server"
  ]
}