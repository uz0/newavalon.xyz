{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"],
      "@content/*": ["./client/content/*"],
      "@shared/*": ["./server/types/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": [
    "client/**/*",
    "server/types/**/*",
    "server/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "server/services/**/*",
    "server/handlers/**/*",
    "server/constants/**/*",
    "server/content/**/*",
    "server/dev.ts"
  ]
}